# hw definition file for Synerduino F405 hardware

# MCU class and specific type
MCU STM32F4xx STM32F405xx

# board ID. See Tools/AP_Bootloader/board_types.txt
APJ_BOARD_ID AP_HW_SYNERDUINO_F405

# crystal frequency
OSCILLATOR_HZ 8000000

define STM32_ST_USE_TIMER 4
define CH_CFG_ST_RESOLUTION 16

FLASH_SIZE_KB 1024

# only one I2C bus
I2C_ORDER I2C2

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART1 USART2 USART3 UART4 UART5 USART6

# LEDs
PB1 LED_BLUE OUTPUT LOW GPIO(0)


# buzzer
PB9 BUZZER OUTPUT GPIO(80) LOW
define HAL_BUZZER_PIN 80


# spi2  bus for IMU
PB13 SPI2_SCK SPI2
PC2 SPI2_MISO SPI2
PC3 SPI2_MOSI SPI2
PB12 IMU_CS CS



# one I2C bus
PB10 I2C2_SCL I2C2
PB11 I2C2_SDA I2C2



# analog pins
PC4 BATT_VOLTAGE_SENS ADC1 SCALE(1)
PC5 BATT_CURRENT_SENS ADC1 SCALE(1)
PB0 RSSI_ADC_PIN ADC1 SCALE(1)
PC0 AIRSPEED_ADC ADC1 SCALE(1)

define HAL_DEFAULT_AIRSPEED_PIN 13

# define default battery setup
define HAL_BATT_VOLT_PIN 12
define HAL_BATT_CURR_PIN 11
define HAL_BATT_VOLT_SCALE 11.08836
define HAL_BATT_CURR_SCALE 30.0
define HAL_BATT_MONITOR_DEFAULT 4

# analog rssi pin
define BOARD_RSSI_ANA_PIN 10





# USART1
PB6 USART1_TX USART1
PB7 USART1_RX USART1

# RC input using timer
PA3 TIM9_CH2 TIM9 RCININT PULLDOWN

# alternative RC input using UART
PA2 USART2_TX USART2 NODMA
PA3 USART2_RX USART2 NODMA ALT(1)

# UART4
PA0 UART4_TX UART4
PA1 UART4_RX UART4

# UART6
PC6  UART5_RX UART6
PC7 UART5_TX UART6


# USB detection
PB12 VBUS INPUT OPENDRAIN


# debug (disabled out to allow for both LEDs)
#PA13 JTMS-SWDIO SWD
#PA14 JTCK-SWCLK SWD

# PWM out pins. Note that channel order follows the ArduPilot motor
# order conventions


PB8  TIM4_CH3 TIM4 PWM(1) GPIO(50)
PB5  TIM3_CH2 TIM3 PWM(2) GPIO(51)
PB4  TIM3_CH1 TIM3 PWM(3) GPIO(52)
PB3  TIM2_CH2 TIM2 PWM(4) GPIO(53)
PA10 TIM1_CH3 TIM1 PWM(5) GPIO(54)
PA9  TIM1_CH2 TIM1 PWM(6) GPIO(55)


define HAL_STORAGE_SIZE 15360
STORAGE_FLASH_PAGE 2

# reserve 32k for bootloader and 32k for flash storage
FLASH_RESERVE_START_KB 64

# one IMU
IMU BMI160 SPI:bmi160 ROTATION_YAW_270
#IMU BMI270 SPI:bmi270 ROTATION_PITCH_180

# I2C BMP280 or SPL06
BARO SPL06  I2C:0:0x76
BARO BMP280 I2C:0:0x76

# no built-in compass, but probe the i2c bus for all possible
# external compass types
define ALLOW_ARM_NO_COMPASS
define HAL_PROBE_EXTERNAL_I2C_COMPASSES
define HAL_I2C_INTERNAL_MASK 0

# SPI devices
SPIDEV bmi160 SPI2 DEVID1 IMU_CS MODE3 1*MHZ 10*MHZ
#SPIDEV bmi270 SPI1 DEVID1 IMU_CS MODE3 1*MHZ 10*MHZ
#SPIDEV sdcard SPI3 DEVID1 SDCARD_CS MODE0 400*KHZ 25*MHZ
#SPIDEV osd    SPI1 DEVID1 AT7456E_CS MODE0 10*MHZ 10*MHZ

# filesystem setup on sdcard
#define HAL_OS_FATFS_IO 1

# setup for OSD
#define OSD_ENABLED 1
#define HAL_OSD_TYPE_DEFAULT 1
#ROMFS_WILDCARD libraries/AP_OSD/fonts/font0.bin



# save some flash
include ../include/minimize_fpv_osd.inc

# disable parachute to save flash
define HAL_PARACHUTE_ENABLED 0


